{
    "manifest_version": 2,
    "name": "Lit Developer Tools V1",
    "version": "1.0",
    "minimum_chrome_version": "10.0",
    "description": "Developer tooling for Lit Element and the Lit ecosystem",
    "author": "Matsuuu <huhta.matias@gmail.com>",
    "devtools_page": "dist/lit-devtools-chrome-init.html",

    "background": {
        "scripts": [
            "dist/background.js"
        ]
    },

    "content_scripts": [
        {
            "matches": [
                "https://*/*"
            ],
            "js": [
                "dist/content_script.js"
            ],
            "run_at": "document_idle"
        }
    ],

    "permissions": [
        "activeTab",
        "tabs",
        "storage",
        "background"
    ]
}
